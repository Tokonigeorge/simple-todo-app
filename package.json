    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.5.0",
    "util": "^0.12.5",
    "uuid": "^3.4.0",
    "vite": "^6.2.5"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "eject": "react-scripts eject",
    "server": "json-server --watch db.json --port 3001 "
  },
  "eslintConfig": {
