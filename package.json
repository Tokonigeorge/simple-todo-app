{
  "name": "simple-todo-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^2.6.1",
    "@tailwindcss/postcss": "^4.1.3",
    "@vitejs/plugin-react": "^4.3.4",
    "axios": "^1.8.4",
    "firebase": "^11.6.0",
    "json-server": "^1.0.0-beta.3",
    "lucide-react": "^0.487.0",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
